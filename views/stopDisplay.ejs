<%- include("partials/headerNoFixedTop.ejs")%>


  <a class="nav-link text-danger" href="/">Start Afresh <i class="fas fa-redo-alt"></i></a>
  <!-- <img class="mb-4" src="/docs/5.0/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57"> -->
  <h5 class="mb-1 fw-normal">Pick your fitst Stop</h5>
  <small class="d-block mb-4">Scroll through to pick a stop. </small>

  <p class="fw-bold mb-2" id="stopSelected" ></p>
  <button type="button" id="optimizeButton" onclick="optimize(this)" firstStop="" class="btn btn-primary w-100 mb-3" name="button">Optimize</button>

  <a href="<%=filePath%>" onclick="deleteFile('<%=filePath%>')" class="mb-3 btn btn-outline-success">Download <i class="fas fa-file-download"></i></a> <br />


  <!-- Display Stops in a list -->
  <div class="stops d-block">
    <div class="list-group text-start">
      <%addresses.forEach(function (stop) {%>

        <a href="#" stop="<%=JSON.stringify(stop)%>" class="list-group-item list-group-item-action" onclick="selectStop(this)" aria-current="true">
        <div class="d-flex w-100 justify-content-between">
          <h6 class="mb-1"><%=stop.Name%></h6>
          <!-- <small>3 days ago</small> -->
        </div>
        <p class="mb-0"><%=stop.Street%>, <%=stop.City%></p>
        <small class="text-disabled"><%=stop.Barcode%></small>
      </a>
      <%});%>
    </div>
  </div>

  <textarea stringifyStops="stringifyStopsValue" rows="8" cols="80"><%=JSON.stringify(addresses)%></textarea>

<p class="mt-5 mb-3 text-muted"><strong>&copy; RouteAssistant</strong> by ACED Devops 2020 | Triumph Courier Services
</p>

